<!-- THE HAED -->
<%- include('partials/head', {title})%>
<!-- THE NAV -->
<%- include('partials/nav')%>
<!-- THE BODY -->
<div class="container-fluid">
  <h1 class="text-center py-2">
    <%= title.toUpperCase() %>
  </h1>
  <div class="row">
    <div class="col-md-6 col-12">
      <!-- CAROUSEL -->
      <section>
        <div class="container py-3">
          <div class="row align-items-center justify-content-center">
            <div class="col-11 col-md-10 col-lg-9">
              <div id="carouselExampleControls" class="carousel slide carousel-fade px-3 mx-3" data-ride="carousel">
                <div class="carousel-inner">
                  <% for( let i = 0; i < book.imgUrlsHigh.length; i++ ) { %>
                  <% if (i===0) { %>
                  <div class="carousel-item active">
                    <img src="<%= book.imgUrlsHigh[i] %>" class="d-block carousel-images" alt="<%= book.name %> ">
                  </div>
                  <% } else { %>
                  <div class="carousel-item">
                    <img src="<%= book.imgUrlsHigh[i] %>" class="d-block carousel-images" alt="<%= book.name %> ">
                  </div>
                  <% } %>
                  <% } %>

                  <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </button>
                </div>
              </div>

            </div>
          </div>
        </div>
      </section>
      <!-- END OF CAROUSEL -->
    </div>
    <div class="col-md-6 col-12">
      <div class="" id="detailed-view">
        <p><b>Author(s):</b> <%= book.author %> </p>
        <p><b>Language:</b> <%= book.language %> </p>
        <p><b>Genre:</b></p>
        <ul>
          <% for( let i = 0; i < book.genre.length; i++ ) { %>
          <li><%= book.genre[i] %></li>
          <% } %>
        </ul>
        <% if (book.description) { %>
        <p><b>Description:</b>
        <section style="font-size: 1.2rem;">
          <% book.description.split("/n").forEach(line => { %>
          <p><%= line %></p>
          <% }) %>
        </section>
        </p>
        <% } %>
        <% if (book.series) { %>
        <p><b>Series:</b> <%= book.series %> </p>
        <% } %>
        <p><b>ISBN:</b> <%= book.ISBN %> </p>
        <p><b>Number of Pages:</b> <%= book.numPages %> </p>
        <p><b>Average Rating:</b> <%= book.avgRating %> </p>
        <p><b>Publisher:</b> <%= book.publisher %> </p>
        <p><b>Publication Year:</b> <%= book.yearPublished %> </p>
      </div>
    </div>
  </div>
  <%= book %>
  <!-- THE FOOTER -->
</div>
<%- include('partials/footer')%>