<!-- THE HAED -->
<%- include('partials/head', {title})%>
<!-- THE NAV -->
<%- include('partials/nav')%>
<!-- THE BODY -->
<div class="container">
  <div class="cantainer">
    <h1 class="text-center py-3 heading">Books: Your Best Friend</h1>
    <blockquote class="blockquote text-center">
      <p class="mb-0 ">
      <blockquote class="blockquote text-center">
        <p class="mb-0 text-primary">“There is no friend as loyal as a book.”</p>
        <footer class="blockquote-footer"><cite title="Source Title">Ernest Hemingway
          </cite></footer>
      </blockquote>
      <blockquote class="blockquote text-center">
        <p class="mb-0 text-primary">“The person, be it gentleman or lady, who has not pleasure in a good novel,
          must be
          intolerably stupid.”</p>
        <footer class="blockquote-footer">Jane Austen in <cite title="Source Title">Northanger Abbey
          </cite></footer>
      </blockquote>
      <blockquote class="blockquote text-center">
        <p class="mb-0 text-primary ">“So many books, so little time.”</p>
        <footer class="blockquote-footer"><cite title="Source Title">Frank Zappa
          </cite></footer>
      </blockquote>

  </div>
  <!-- CAROUSEL -->
  <section>
    <div class="container py-3">
      <div class="row align-items-center justify-content-center">
        <div class="col-10 col-md-8 col-lg-6">
          <div id="carouselExampleControls" class="carousel slide carousel-fade px-3 mx-3" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="images/400/Rhythm  400px.png" class="d-block w-100" alt="Rhythm of War">
              </div>
              <div class="carousel-item">
                <img src="images/400/Harry Potter and the Prisoner Azkaban 400px.png" class="d-block w-100" alt="Harry Potter and the Prisoner of Azkaban">
              </div>
              <div class="carousel-item">
                <img src="images/400/Pride and Prejudice 400px.png" class="d-block w-100" alt="Pride and Prejudice">
              </div>

              <div class="carousel-item">
                <img src="images/400/The Name the Wind 400px.png" class="d-block w-100" alt="The Name of the Wind">
              </div>
              <div class="carousel-item">
                <img src="images/400/The Eye the World 400px.png" class="d-block w-100" alt="The Name of the Wind">
              </div>
              <!-- <div class="carousel-item">
                                <img src="images/400/Dune 400px.png" class="d-block w-100" alt="Dune">
                            </div> -->
              <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
              </button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </section>
  <!-- END OF CAROUSEL -->
  <div class="blank"></div>
  <div class="container">
    <% for( let book of books) { %>
    <div id="listItems" class="row justify-content-center py-2 align-items-center">
      <div class="col-5 col-md-4 col-lg-3">
        <img src="<%= book.imgUrlsHigh %>" alt="<%= book.name %> " class="img-fluid px-2">
      </div>
      <div class="col-6 col-md-4 col-lg-3 details">
        <div class="row py-2 text-center">
          <!-- <div class="col-12"> -->
          <p id="bookName" class="lead"><%= book.name %> <br>by <%= book.author %>
            <br> <span id="series"><%= book.series %> </span>
          </p>

        </div>
      </div>
      <div class="col-lg-3 col-md-4 d-block d-md-inline-block">
        <div class="text-center" id="details">
          <p>ISBN: <%= book.ISBN %> </p>
          <p>Publisher: <%= book.publisher %> </p>
          <p>Average Rating: <%= book.avgRating %> </p>
          <p>Number of Pages: <%= book.numPages %> </p>
          <p>Language: <%= book.language %> </p>
          <p>Genre: <%= book.genre[0] %> </p>
          <p>Publication Year: <%= book.yearPublished %> </p>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
<!-- THE FOOTER -->
<%- include('partials/footer')%>